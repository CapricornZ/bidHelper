<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <appender name="log_console" type="log4net.Appender.ColoredConsoleAppender, log4net">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{HH:mm:ss.fff} - THREAD:[%thread] %message%newline"/>
      </layout>
    </appender>

    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="INFO" />
        <foreColor value="Blue" />
        <backColor value="White, HighIntensity" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Green" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="White" />
        <backColor value="Red, HighIntensity" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{HH:mm:ss.fff} THREAD:[%thread] %logger  %message%newline" />
      </layout>
    </appender>

    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--定义文件存放位置-->
      <!--日志文件名开头-->
      <param name="File" value="log/logFile.log" />
      <!--是否追加到文件-->
      <param name="AppendToFile" value="true" />
      <param name="StaticLogFileName" value="true" />
      <!--日志文件格式-->
      <param name="DatePattern" value="yyyyMMdd" />
      <!--按照文件的大小进行变换日志文件-->
      <!--<param name="RollingStyle" value="Size" />-->
      <!--我这里按照日期-->
      <param name="RollingStyle" value="Date" />

      <layout type="log4net.Layout.PatternLayout">
        <!--每条日志末尾的文字说明-->
        <!--<footer value="by 俊傑  "/>-->
        <!--输出格式-->
        <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
        <conversionPattern value="%date{HH:mm:ss.fff} - THREAD[%thread] %logger %message%newline"/>
      </layout>
    </appender>


    <root>
      <level value="DEBUG"/>
      <!--文件形式记录日志-->
      <appender-ref ref="ColoredConsoleAppender"/>
      <appender-ref ref="LogFileAppender"/>
    </root>
  </log4net>
</configuration>
